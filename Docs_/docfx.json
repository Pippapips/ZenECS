{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "src": "../src",
          "files": [
            "ZenECS.Core.csproj"
          ]
        },
        {
          "src": "../src",
          "files": [
            "ZenECS.Adapter.Unity.csproj"
          ]
        }
      ],
      "dest": "api",
      "filter": "apiFilter.yml",
      "properties": {
        "TargetFramework": "netstandard2.1",
        "Configuration": "Release"
      },
      "noRestore": false
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      },
      {
        "files": [
          "README.md"
        ],
        "src": "..",
        "dest": "."
      },
      {
        "files": [
          "**/*.md"
        ],
        "src": "../Docs",
        "dest": "docs"
      },
      {
        "files": [
          "**/README.md"
        ],
        "src": "../Packages",
        "dest": "Packages"
      }
    ],
    "resource": [
      {
        "files": [
          "favicon.ico",
          "logo.svg"
        ]
      },
      {
        "files": [
          "**/README.md"
        ],
        "src": "../Packages",
        "dest": "Packages"
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "ZenECS",
      "_appTitle": "ZenECS Documentation",
      "_appFooter": "MIT Â© Pippapips Limited",
      "_enableSearch": true,
      "_enableNewTab": true,
      "pdf": true,
      "_appRootPath": "/ZenECS/"
    },
    "fileMetadata": {
      "priority": {
        "**/README.md": 1,
        "**/index.md": 1
      }
    }
  }
}
